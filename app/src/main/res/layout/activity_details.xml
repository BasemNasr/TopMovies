<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.basemnasr.movies.topmovies.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009788"
            android:text="DeadPool"
            android:textColor="#FFF"
            android:id="@+id/MovTitleID"
            android:elevation="8dp"
            android:padding="30dp"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:layout_margin="10dp"
                android:id="@+id/PosterID"
                android:src="@drawable/imagetest"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015"
                    android:layout_marginLeft="26sp"
                    android:textColor="#9D9D9D"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relDateID"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120Min"
                    android:layout_marginLeft="26sp"
                    android:textColor="#9D9D9D"
                    android:layout_marginTop="10dp"
                    android:textSize="26sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.1/10"
                    android:layout_marginLeft="26sp"
                    android:textColor="#000"
                    android:id="@+id/voteAverageId"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="#009788"
                    android:id="@+id/AddToFavoritBtn"
                    android:text="MARK AS\nFAVORITE"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#868686"
            android:layout_margin="8dp"
            android:text="Film Content"
            android:id="@+id/contentID"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#868686"
            android:layout_margin="8dp"
            android:text="Trailers : "
            android:textSize="22sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Trialersrv"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#868686"
            android:layout_margin="8dp"
            android:text="Reviews : "
            android:textSize="22sp"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/Reviewsrv"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



</ScrollView>
